<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ControllerFormAddBook">
    <children>
        <Pane layoutY="-8.0" prefHeight="103.0" prefWidth="400.0" style="-fx-background-color: #36394B;">
            <children>
                <ImageView fx:id="iv_icon_form" fitHeight="30.0" fitWidth="30.0" layoutX="185.0" layoutY="22.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../res/add_new_book.png" />
                    </image>
                </ImageView>
                <Label layoutX="115.0" layoutY="52.0" text="Add New Book" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <JFXTextField fx:id="tf_idbook" layoutX="27.0" layoutY="118.0" prefHeight="35.0" prefWidth="347.0" promptText="ID Book" />
        <JFXTextField fx:id="tf_name" layoutX="27.0" layoutY="173.0" prefHeight="35.0" prefWidth="347.0" promptText="Name" />
        <JFXButton fx:id="bt_cancel_add_book" layoutX="200.0" layoutY="537.0" onAction="#setOnClickCancel" prefHeight="35.0" prefWidth="85.0" text="Cancel">
            <font>
                <Font size="14.0" />
            </font>
        </JFXButton>
        <JFXButton fx:id="bt_submit" layoutX="285.0" layoutY="537.0" onAction="#setOnClickSubmit" prefHeight="35.0" prefWidth="85.0" style="-fx-background-color: #36394B;" text="Submit" textFill="WHITE" />
        <JFXComboBox fx:id="cb_category" layoutX="27.0" layoutY="231.0" prefHeight="35.0" prefWidth="347.0" promptText="Category" />
        <JFXTextField fx:id="tf_author" layoutX="27.0" layoutY="283.0" prefHeight="35.0" prefWidth="347.0" promptText="Author" />
      <JFXTextField fx:id="tf_cost" layoutX="27.0" layoutY="340.0" prefHeight="35.0" prefWidth="347.0" promptText="Cost" />
      <JFXTextField fx:id="tf_total" layoutX="27.0" layoutY="399.0" prefHeight="35.0" prefWidth="347.0" promptText="Total" />
    </children>
</AnchorPane>
